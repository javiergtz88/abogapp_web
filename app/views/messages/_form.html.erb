<div id="chat_msg_form" class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Enviar un mensaje</h3>
  </div>
  <div class="panel-body">
    
<%= form_for @mensaje_nuevo, url: new_mensaje_path, :html => {:class => 'form-horizontal'} do |f| %>

  <div class="form-group">
    <%= f.label :msg_type, :class => "col-sm-2 control-label" %> 
    <div class="col-sm-10">
      <%= f.select :msg_type, options_for_select(msg_type_options), {}, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :message_text, :class => "col-sm-2 control-label" %> 
    <div class="col-sm-10">
      <%= f.text_area :message_text, size:"50x3" , maxlength: "1200", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Guardar',  :class => "btn btn-default"%>
    </div>
  </div>
    
<%end%>


  </div>
</div>